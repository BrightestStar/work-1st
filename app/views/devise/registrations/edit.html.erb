<p><h3>修改个人资料</h3>(*为必填项)</p>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= f.error_notification %>
<br>

<div class="row">
  <div class="col-md-7">
    *<%= f.label :用户名 %><br/>
    <%= f.text_field :username, class: "form-control", :autofocus => true %>
  </div>
  <br>
</div>
<br>
<div class="row">
  <div class="col-md-7">
    *<%= f.label :邮箱 %><br>
    <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
  </div>
  <br>
</div>
<br>

<div class="row">
  <div class="col-md-3">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for:
      <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.label :新密码 %>
    <%= f.password_field :password, class: "form-control", autocomplete: "off", required: false %>
    （如果不改密码，可以不填）
  </div>
  <div class="col-md-4">
    <%= f.label :新密码确认 %><br>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", required: false %>
  </div>
  <br>
</div>

<br>
<div class="row">
  <div class="col-md-7">
    *<%= f.label :当前密码 %><br>
    <%= f.password_field :current_password, class: "form-control",required: true %>
  </div>
  <br>
</div>
<br>
<div class="form-actions">
  <%= f.button :submit, "更新" %>
</div>
<% end %>

<br>
<p>
  <%= link_to "返回", :back, class: "btn btn-default" %>
  <%= link_to "注销", registration_path(resource_name), data: { confirm: "如果销注，你的所以任务都将删除，你确定吗？" }, method: :delete, class: "btn btn-default" %></p>
